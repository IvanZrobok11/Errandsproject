@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="main__sidebar sidebar">
    <div class="sidebar__sign-in sign-in">
        <form class="sign-in__form form-horizontal" asp-action="Login" method="post">
            <h2 class="sign-in__title">Sign in</h2>
            <span class="sign-in__dash"></span>
            <div class="input-validation-error" asp-validation-summary="ModelOnly"></div>

            <label asp-for="UserName" class="sign-in__label">UserName</label>
            <span asp-validation-for="UserName"></span>
            <input asp-for="UserName" class="sign-in__input">

            <label asp-for="Password" class="sign-in__label">Password</label>
            <span asp-validation-for="Password"></span>
            <input asp-for="Password" class="sign-in__input">

            <input asp-for="RememberMe" class="sign-in__checkbox custom-checkbox">
            <label asp-for="RememberMe" class="sign-in__label">Remember me</label>

            <button type="submit" class="sign-in__button btn-submit">Submit</button>
            <a class="sign-in__link-signin" asp-action="Register">Register</a>
        </form>
    </div>
</div>
