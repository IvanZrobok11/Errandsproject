@model EditErrandModel
@{
    ViewData["Title"] = "Edit";
}
<div class="form-create">
    <form asp-action="Edit" method="post" class="">
        <h3 class="sign-in__title form-create__title">Create errand</h3>
        <div class="input-validation-error" asp-validation-summary="All"></div>
        <div class="input-validation-error" >@TempData[TempDataResult.ErrorMessage]</div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="File"/>
        <div>
            <label class="form-create__label" asp-for="Title">Title</label><br>
            <input class="form-create__input" type="text" asp-for="Title">
        </div>
        <div>
            <label class="form-create__label" asp-for="Desc">Description</label><br>
            <textarea class="form-create__textarea" placeholder="Enter description" asp-for="Desc" cols="50" rows="4"></textarea>
        </div>
        <div>
            <label class="form-create__label" asp-for="Cost">Enter price how many you ready to pay</label><br>
            <input class="form-create__input" placeholder="Enter digit" asp-for="Cost" >
        </div>
        @foreach (var file in Model.File)
        {
            <a asp-controller="Errand" asp-action="GetFile" asp-route-id="@file.Id">Download @file.Name</a>
        }
