
@model IEnumerable<GetMyErrandViewModel>
@{
    ViewData["Title"] = "My List";
}
<div class="main__table">
    <table class="table">
        <caption class="table__caption">My list</caption>
        <tr>
            <th class="table__title">Title</th>
            <th class="table__title">Price</th>
            <th class="table__title">Description</th>
            <th class="table__title">Done</th>
            <th class="table__title">Active</th>
            <th class="table__title"></th>
            <th class="table__title"></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">@item.Title</td>
                <td class="table__price">@item.Cost</td>
                <td class="text-right">@item.Description</td>
                <td class="@(item.Done?"txt-success":"txt-danger")">@item.Done</td>
                <td class="@(item.Active?"txt-success":"txt-danger")">@item.Active</td>
                <td class="text-center">
                    <form asp-action="Delete" method="post">
                        <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Edit</a>
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
                <td>
                    @if (item.HelperUserId != null)
                    {
                    @*<a asp-controller="Message" asp-action="Chat" asp-route-userId="@item.HelperUserId">@item.HelperUserId</a>*@
                        <form asp-action="Chat" asp-controller="Message" method="post">
                            <input type="hidden" name="receiverUserId" value="@item.HelperUserId" />
                            <button type="submit">Go to chat</button>
                        </form>
                    }
                </td>
            </tr>
        }

    </table>
    <div class="text-center">
        <a asp-action="Create">Create new</a>
    </div>
</div>