
@model IEnumerable<Errand>
@{
    ViewData["Title"] = "My List";
}
<div class="main__table">
    <div>@TempData[TempDataResult.SuccessMessage]</div>
    <table class="table">
        <caption class="table__caption">My list</caption>
        <tr>
            <th class="table__title">Title</th>
            <th class="table__title">Price</th>
            <th class="table__title">Description</th>
            <th class="table__title">Made</th>
            <th class="table__title">Active</th>
            <th class="table__title"></th>
            <th class="table__title"></th>
            <th class="table__title"></th>
        </tr>
        @foreach (var errand in Model)
        {
            <tr>
                <td class="text-right">
                    <a asp-action="GetErrand" asp-controller="Errand" asp-route-errandId="@errand.Id">@errand.Title</a>
                </td>
                <td class="table__price">@errand.Cost</td>
                <td class="text-right">@errand.Description</td>
                <td class="@(errand.Done ? "txt-success" : "txt-danger")">@errand.Done</td>
                <td class="@(errand.Active ? "txt-success" : "txt-danger")">@errand.Active</td>
                <td class="text-center">
                </td>
                <td>
                </td>
                @if (errand.HelperUserId != null)
                {
                    <td>
                        @*<a asp-controller="Message" asp-action="Chat" asp-route-userId="@item.HelperUserId">@item.HelperUserId</a>*@
                        <form asp-action="Chat" asp-controller="Message" method="post">
                            <input type="hidden" name="receiverUserId" value="@errand.HelperUserId" />
                            <button type="submit">Go to chat</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Confirm" asp-controller="Errand" method="post">
                            <input type="hidden" name="id" value="@errand.Id" />
                            <button @(errand.Done ? "disabled" : "") type="submit">Confirm</button>
                        </form>
                    </td>
                }
            </tr>
        }

    </table>
</div>